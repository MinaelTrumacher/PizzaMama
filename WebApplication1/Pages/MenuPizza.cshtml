@page
@model WebApplication1.Pages.MenuPizzaModel
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Menu des pizzas</title>
    </head>
    <body>
        <a asp-page="Index">
            <img src="~/images/small_logo.png" id="small_logo">
        </a>
        <br/>
        <br/>
        <div class="menu_title">
            <h1>Les pizzas</h1>
        </div>

        <div class="menu_list">
            <div class="menu_pizza">
                @foreach (var pizza in Model.Pizza)
                {
                    <span class="pizza_item_name">
                        @pizza.nom
                    </span>
                    <span class="pizza_item_price">
                        @String.Format("{0:0.00}", pizza.prix)€
                    </span>
                    <br/>
                    <span class="pizza_item_ingredients">
                        @pizza.ingredients
                    </span>

                    @if (@pizza.vegetarienne) {
                        <br/>
                        <span class="vegetarienne">
                            VEGETARIENNE
                        </span>
                    }
                    <br/><br/>
                }
            </div>
        </div>

    </body>
</html>
